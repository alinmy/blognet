

<%if @post.empty? %>
 <h1>Пока нет записей в Блоге+++</h1>
  
 <%else %>
<h1> Все посты Блога </h1>

<%@post.each do |post|%>
<div class="alert alert-light">
	
 <h3> <%=post.title %> </h3>
 <p> <%=post.body%></p>
 <h2>Пост <%=post.user.username%></h2>
  <%=link_to "Читать далее", post_path(post), :class => 'btn btn-outline-primary'%>
</div>
<br>
 <% end %>
  <% end %>
  
  


 
 
